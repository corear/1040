<style>
  body {
        background: 
        linear-gradient(
        rgba(255,255,255,0.9),
        rgba(255,255,255,0.9)
        ), url("/header-4.jpg") no-repeat center center fixed;
        
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
    }
</style>

  <center>
  <div class="row container">
  <div class="col-md-4"></div>
  <div class="col-md-4 raised" style="margin-top: 200px;margin-bottom: 200px;border-radius: 10px;background-color: #fff;padding: 50px;padding-left:20px;padding-right:20px;opacity:0.9;">
    <h4>Register</h4>
    <p>No credit card required.</p>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <%= f.email_field :email, autofocus: true, :class => "inputField", placeholder: "Email" %>


    <%= f.password_field :password, autocomplete: "off", :class => "inputField", placeholder: "Password" %>


    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "inputField", placeholder: "Confirm password" %>
 

  <div class="actions">
    <%= f.submit "Create account", :class => "btn-lg btn-primary", :style => "width:100%;margin-top:10px;" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
<div class="col-md-4"></div>
</div>

</center>