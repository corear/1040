

  <center>
  <div class="row container">
  <div class="col-md-4"></div>
  <div class="col-md-4 raised" style="margin-top: 200px;margin-bottom: 200px;border-radius: 10px;background-color: #fff;padding: 50px;padding-left:20px;padding-right:20px;opacity:0.9;">
    <h4>Reset your password</h4>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
<%= f.hidden_field :reset_password_token %>
    <%= f.password_field :password, autofocus: true, :class => "inputField", placeholder: "New Password" %>
    <%= f.password_field :password_confirmation, autofocus: true, :class => "inputField", placeholder: "Confirm Password" %>

<div class="actions">
    <%= f.submit "reset password", :class => "btn-lg btn-primary", :style => "width:100%;margin-top:10px;" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
<div class="col-md-4"></div>
</div>

</center>