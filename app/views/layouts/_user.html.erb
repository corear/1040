
<div class="row" style="padding:20px;border-bottom: 1px solid #e8e8e8">
                <div class="col-md-3" style="margin:0;">
                    <h3 style="text-transform:capitalize"><%= @u.first_name %>&nbsp;<%= @u.last_name %></h3>
                </div>
                <div class="col-md-2" style="margin:0;">
                    <% @bes1t = distance_of_time_in_words(Time.now, (@u.created_at.to_time)) %>
                    <% @bes1t.slice!("about ") %>
                    <h4 style="text-align:center;line-height:48px;"><%= @bes1t %></h4>
                </div>
                <div class="col-md-2" style="margin:0;">
                    <% @best = (time_ago_in_words(@u.updated_at)) %>
                    <% @best.slice!("about ") %>
                    <h4 style="text-align:center;line-height:48px;"><%= @best %> ago</h4>
                </div>
                <div class="col-md-5" style="margin:0;">
                    <% if @u.stripeid == nil %>
                    
                    <h3 style="text-align:center">NONE</h3>
                    <% else %>
                    <div class="row" style="margin:0">
                        <div class="col-md-9">
                                        
                                <h4 style="padding:5px;border-radius:50px;background-color:#bfbfbf;color:white;text-align:center"><span><img style="height:40px;width:auto;" src="/<%= Stripe::Customer.retrieve(@u.stripeid).sources['data'][0].brand %>.png" style="max-height:70px;height:100%;width:auto" /></span>&nbsp;&nbsp;•••• •••• •••• <%= Stripe::Customer.retrieve(@u.stripeid).sources['data'][0].last4 %></h4>
                        </div>
                        <div class="col-md-3">
                            <h4 style="text-align:center;line-height:44px;"><%= Stripe::Customer.retrieve(@u.stripeid).sources['data'][0].exp_month %>&nbsp;/&nbsp;<%= Stripe::Customer.retrieve(@u.stripeid).sources['data'][0].exp_year %></h4>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>